<?php $ratingCollection = $this->getRatings(); ?>

<div class="feedback-review-table-container">
	<?php if($ratingCollection->count()): ?>
		<table class="data-table">
			<colgroup><col>
				<col width="1">
				<col width="1">
				<col width="1">
				<col width="1">
				<col width="1">
			</colgroup><thead>
				<tr class="first last">
					<th>&nbsp;</th>
					<th><span class="nobr a-center"><?php echo $this->__('1 star'); ?></span></th>
					<th><span class="nobr a-center"><?php echo $this->__('2 star'); ?></span></th>
					<th><span class="nobr a-center"><?php echo $this->__('3 star'); ?></span></th>
					<th><span class="nobr a-center"><?php echo $this->__('4 star'); ?></span></th>
					<th><span class="nobr a-center"><?php echo $this->__('5 star'); ?></span></th>
				</tr>
			</thead>
			<tbody>
				<?php $count = 0; foreach($ratingCollection as $rating): $count++; ?>
					<?php $rateValue = $this->getValue($rating->getId()); ?>				
					<tr class="<?php echo ($count % 2 == 0 ? 'even': 'odd'); ?>">					
						<th><?php echo $rating->getName(); ?></th>
						<?php if($rateValue): ?>
							<th class="value a-center" colspan="5"><?php echo $rateValue . $this->__(' star'); ?></th>
						<?php else: ?>
							<td class="value a-center"><input type="radio" name="ratings[<?php echo $rating->getId(); ?>]" id="<?php echo $rating->getName() . '_1'; ?>" value="1" class="radio"></td>
							<td class="value a-center"><input type="radio" name="ratings[<?php echo $rating->getId(); ?>]" id="<?php echo $rating->getName() . '_2'; ?>" value="2" class="radio"></td>
							<td class="value a-center"><input type="radio" name="ratings[<?php echo $rating->getId(); ?>]" id="<?php echo $rating->getName() . '_3'; ?>" value="3" class="radio"></td>
							<td class="value a-center"><input type="radio" name="ratings[<?php echo $rating->getId(); ?>]" id="<?php echo $rating->getName() . '_4'; ?>" value="4" class="radio"></td>
							<td class="value a-center"><input type="radio" name="ratings[<?php echo $rating->getId(); ?>]" id="<?php echo $rating->getName() . '_5'; ?>" value="5" class="radio"></td>
						<?php endif; ?>
					</tr>
				<?php endforeach; ?>           
			</tbody>
		</table>
	<?php else: ?>
		<div><?php echo $this->__('Ratings not available to review this seller. '); ?></div>
	<?php endif; ?>
</div>
