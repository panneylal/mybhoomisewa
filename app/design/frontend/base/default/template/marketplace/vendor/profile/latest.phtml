<div id="vendor_profile">		
	<?php $_highestSellingProduct = $this->getHighestSellingProduct(); ?>
	<?php if(!is_null($_highestSellingProduct)): ?>
		<div class="highest-selling-product-container">
			<h3 class="product-grid-header"><b><?php echo $this->__('Highest Selling Product'); ?></b></h3>
			<ul class="profile-products-grid">				
				<li class="item">
					<a href="<?php echo $_highestSellingProduct->getProductUrl() ?>" title="<?php echo $this->stripTags($this->getImageLabel($_highestSellingProduct, 'small_image'), null, true) ?>" class="product-image">
						<img src="<?php echo $this->helper('catalog/image')->init($_highestSellingProduct, 'small_image')->resize(135); ?>" alt="<?php echo $this->stripTags($this->getImageLabel($_highestSellingProduct, 'small_image'), null, true) ?>" />
					</a>
					<h2 class="product-name"><a href="<?php echo $_highestSellingProduct->getProductUrl() ?>" title="<?php echo $this->stripTags($_highestSellingProduct->getName(), null, true) ?>"><?php echo $_highestSellingProduct->getName() ?></a></h2>
					<?php echo $this->getPriceHtml($_highestSellingProduct, true) ?>
					<div class="actions">
						<?php if ($_highestSellingProduct->isSaleable()): ?>
							<button type="button" title="<?php echo $this->__('Add to Cart') ?>" class="button btn-cart" onclick="setLocation('<?php echo $this->getAddToCartUrl($_highestSellingProduct) ?>')"><span><span><?php echo $this->__('Add to Cart') ?></span></span></button>
						<?php else: ?>
							<p class="availability out-of-stock"><span><?php echo $this->__('Out of stock') ?></span></p>
						<?php endif; ?>
						<ul class="add-to-links">
							<?php if ($this->helper('wishlist')->isAllow()) : ?>
								<li><a href="<?php echo $this->helper('wishlist')->getAddUrl($_highestSellingProduct) ?>" class="link-wishlist"><?php echo $this->__('Add to Wishlist') ?></a></li>
							<?php endif; ?>
							<?php if ($_compareUrl = $this->getAddToCompareUrl($_highestSellingProduct)): ?>
								<li><span class="separator">|</span> <a href="<?php echo $_compareUrl ?>" class="link-compare"><?php echo $this->__('Add to Compare') ?></a></li>
							<?php endif; ?>
						</ul>
					</div>
					<div class="bestselling"></div>
				</li>
				<li class="clear"></li>
			</ul>
		</div>
	<?php endif; ?>
	<?php $_productCollection = $this->getItems() ?>
	<?php $_collectionSize = $_productCollection->count() ?>
	<?php $_columnCount = $this->getColumnCount(); ?>
	<?php if ($_productCollection->count()): ?>
	<div class="product-grid-container">
		<h3 class="product-grid-header"><b><?php echo $this->__('Latest Product Added'); ?></b></h3>
		<ul class="profile-products-grid <?php echo (is_null($_highestSellingProduct) ? 'full' : ''); ?>">
			<?php foreach ($_productCollection as $_product): ?>
				<li class="item">
					<a href="<?php echo $_product->getProductUrl() ?>" title="<?php echo $this->stripTags($this->getImageLabel($_product, 'small_image'), null, true) ?>" class="product-image">
						<img src="<?php echo $this->helper('catalog/image')->init($_product, 'small_image')->resize(135); ?>" alt="<?php echo $this->stripTags($this->getImageLabel($_product, 'small_image'), null, true) ?>" />
					</a>
					<h2 class="product-name"><a href="<?php echo $_product->getProductUrl() ?>" title="<?php echo $this->stripTags($_product->getName(), null, true) ?>"><?php echo $_product->getName() ?></a></h2>
					<?php echo $this->getPriceHtml($_product, true) ?>
					<div class="actions">
						<?php if ($_product->isSaleable()): ?>
							<button type="button" title="<?php echo $this->__('Add to Cart') ?>" class="button btn-cart" onclick="setLocation('<?php echo $this->getAddToCartUrl($_product) ?>')"><span><span><?php echo $this->__('Add to Cart') ?></span></span></button>
						<?php else: ?>
							<p class="availability out-of-stock"><span><?php echo $this->__('Out of stock') ?></span></p>
						<?php endif; ?>
						<ul class="add-to-links">
							<?php if ($this->helper('wishlist')->isAllow()) : ?>
								<li><a href="<?php echo $this->helper('wishlist')->getAddUrl($_product) ?>" class="link-wishlist"><?php echo $this->__('Add to Wishlist') ?></a></li>
							<?php endif; ?>
							<?php if ($_compareUrl = $this->getAddToCompareUrl($_product)): ?>
								<li><span class="separator">|</span> <a href="<?php echo $_compareUrl ?>" class="link-compare"><?php echo $this->__('Add to Compare') ?></a></li>
							<?php endif; ?>
						</ul>
					</div>
				</li>		
			<?php endforeach; ?>
			<li class="clear"></li>
		</ul>
	</div>
	<?php endif; ?>
	<div class="clear"></div>
</div>
