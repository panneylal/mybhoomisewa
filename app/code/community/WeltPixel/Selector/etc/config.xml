                <newsletter_box_border_color></newsletter_box_border_color>
                <newsletter_box_text_color></newsletter_box_text_color>
            </footer>
            <pre_footer>
                <background_color></background_color>
                <text_color></text_color>
                <link_color></link_color>
                <link_hover_color></link_hover_color>
            </pre_footer>
            <sub_footer>
                <background_color></background_color>
                <text_color></text_color>
                <link_color></link_color>
                <link_hover_color></link_hover_color>
            </sub_footer>
            <layered_navigation>
                <link_color></link_color>
                <background_color></background_color>
                <text_color></text_color>
                <price_slider_color></price_slider_color>
            </layered_navigation>
            <ajaxsearch>
                <name_color></name_color>
                <name_hover_color></name_hover_color>
                <hover_color></hover_color>
                <short_descr_color></short_descr_color>
                <short_descr_hover_color></short_descr_hover_color>
                <price_color></price_color>
                <price_hover_color></price_hover_color>
            </ajaxsearch>
            <social_media_icons>
                <social_media_icons_color></social_media_icons_color>
                <social_media_icons_hover_color></social_media_icons_hover_color>
            </social_media_icons>
        </weltpixel_colorsettings>
        <weltpixel_fontsettings>
            <font_family>
                <basic_font_heading></basic_font_heading>
                <basic_font>0</basic_font>
                <basic_characterset></basic_characterset>
                <basic_weight>400</basic_weight>
                <headings_font_heading></headings_font_heading>
                <headings_font>0</headings_font>
                <headings_characterset></headings_characterset>
                <headings_weight>400</headings_weight>
            </font_family>
            <font_size>
                <basic></basic>
                <h1></h1>
                <h2></h2>
                <h3></h3>
                <h4></h4>
                <product_page_headings></product_page_headings>
                <category_page_product_list_grid_name></category_page_product_list_grid_name>
                <category_page_title></category_page_title>
            </font_size>
        </weltpixel_fontsettings>
    </default>

</config>