<?xml version="1.0"?>
<config>
    <modules>
        <WeltPixel_Selector>
            <version>0.0.2</version>
        </WeltPixel_Selector>
    </modules>

    <global>
        <models>
            <weltpixel_selector>
                <class>WeltPixel_Selector_Model</class>
            </weltpixel_selector>
        </models>
        <blocks>
            <weltpixel_selector>
                <class>WeltPixel_Selector_Block</class>
            </weltpixel_selector>
        </blocks>
        <helpers>
            <selector>
                <class>WeltPixel_Selector_Helper</class>
            </selector>
            <weltpixel_selector>
                <class>WeltPixel_Selector_Helper</class>
            </weltpixel_selector>
        </helpers>
        <page>
            <layouts>
                <full_screen module="weltpixel_selector" translate="label">
                    <label>Full Screen</label>
                    <template>page/full-screen.phtml</template>
                    <layout_handle>full_screen</layout_handle>
                    <is_default>1</is_default>
                </full_screen>
                <one_column_merged_header module="weltpixel_selector" translate="label">
                    <label>1 column merged header</label>
                    <template>page/1column_merged_header.phtml</template>
                    <layout_handle>page_one_column_merged_header</layout_handle>
                    <is_default>1</is_default>
                </one_column_merged_header>
                <two_columns_left_merged_header module="weltpixel_selector" translate="label">
                    <label>2 columns with left bar merged header</label>
                    <template>page/2columns-left_merged_header.phtml</template>
                    <layout_handle>page_two_columns_left_merged_header</layout_handle>
                </two_columns_left_merged_header>
                <two_columns_right_merged_header module="weltpixel_selector" translate="label">
                    <label>2 columns with right bar merged header</label>
                    <template>page/2columns-right_merged_header.phtml</template>
                    <layout_handle>page_two_columns_right_merged_header</layout_handle>
                </two_columns_right_merged_header>
                <three_columns_merged_header module="weltpixel_selector" translate="label">
                    <label>3 columns merged header</label>
                    <template>page/3columns_merged_header.phtml</template>
                    <layout_handle>page_three_columns_merged_header</layout_handle>
                </three_columns_merged_header>
            </layouts>
        </page>
    </global>

    <frontend>
        <events>
            <controller_action_layout_generate_blocks_after>
                <observers>
                    <weltpixel_selector_changer>
                        <type>singleton</type>
                        <class>WeltPixel_Selector_Model_Observer</class>
                        <method>controllerActionLayoutGenerateBlocksAfter</method>
                    </weltpixel_selector_changer>
                </observers>
            </controller_action_layout_generate_blocks_after>
            <controller_action_layout_generate_xml_before>
                <observers>
                    <weltpixel_selector_controller_action_layout_generate_xml_before>
                        <class>WeltPixel_Selector_Model_Observer</class>
                        <method>sidebarOptionsSetup</method>
                        <type>singleton</type>
                    </weltpixel_selector_controller_action_layout_generate_xml_before>
                </observers>
            </controller_action_layout_generate_xml_before>
        </events>
    </frontend>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <weltpixel_selector before="Mage_Adminhtml">WeltPixel_Selector_Adminhtml</weltpixel_selector>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <menu>
            <weltpixel translate="title">
                <title>WeltPixel</title>
                <sort_order>200</sort_order>
                <children>
                    <cleotheme translate="title">
                        <title>Cleo Theme</title>
                        <sort_order>90</sort_order>
                        <children>
                            <selector translate="title" module="selector">
                                <title>Theme settings</title>
                                <action>adminhtml/system_config/edit/section/weltpixel_selector</action>
                                <sort_order>90</sort_order>
                            </selector>
                            <colorsettings translate="title" module="selector">
                                <title>Color settings</title>
                                <action>adminhtml/system_config/edit/section/weltpixel_colorsettings</action>
                                <sort_order>100</sort_order>
                            </colorsettings>
                            <fontsettings translate="title" module="selector">
                                <title>Font settings</title>
                                <action>adminhtml/system_config/edit/section/weltpixel_fontsettings</action>
                                <sort_order>110</sort_order>
                            </fontsettings>
                        </children>
                    </cleotheme>

                </children>
            </weltpixel>
        </menu>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <weltpixel_selector translate="title" module="selector">
                                            <title>WeltPixel Theme settings</title>
                                            <sort_order>1600</sort_order>
                                        </weltpixel_selector>
                                        <weltpixel_colorsettings translate="title" module="selector">
                                            <title>WeltPixel Color settings</title>
                                            <sort_order>1700</sort_order>
                                        </weltpixel_colorsettings>
                                        <weltpixel_fontsettings translate="title" module="selector">
                                            <title>WeltPixel Font settings</title>
                                            <sort_order>1800</sort_order>
                                        </weltpixel_fontsettings>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
        <layout>
            <updates>
                <weltpixel_selector>
                    <file>weltpixel/selector.xml</file>
                </weltpixel_selector>
            </updates>
        </layout>
        <events>
            <admin_system_config_changed_section_weltpixel_colorsettings>
                <observers>
                    <weltpixel_admin_system_config_changed_section_weltpixel_colorsettings>
                        <type>singleton</type>
                        <class>WeltPixel_Selector_Model_Observer</class>
                        <method>generateDynamicCss</method>
                    </weltpixel_admin_system_config_changed_section_weltpixel_colorsettings>
                </observers>
            </admin_system_config_changed_section_weltpixel_colorsettings>
            <admin_system_config_changed_section_weltpixel_selector>
                <observers>
                    <weltpixel_admin_system_config_changed_section_weltpixel_selector>
                        <type>singleton</type>
                        <class>WeltPixel_Selector_Model_Observer</class>
                        <method>generateDynamicCss</method>
                    </weltpixel_admin_system_config_changed_section_weltpixel_selector>
                </observers>
            </admin_system_config_changed_section_weltpixel_selector>
            <admin_system_config_changed_section_weltpixel_fontsettings>
                <observers>
                    <weltpixel_admin_system_config_changed_section_weltpixel_fontsettings>
                        <type>singleton</type>
                        <class>WeltPixel_Selector_Model_Observer</class>
                        <method>generateDynamicCss</method>
                    </weltpixel_admin_system_config_changed_section_weltpixel_fontsettings>
                </observers>
            </admin_system_config_changed_section_weltpixel_fontsettings>
            <admin_system_config_changed_section_weltpixel_ajaxsearch>
                <observers>
                    <weltpixel_admin_system_config_changed_section_weltpixel_ajaxsearch>
                        <type>singleton</type>
                        <class>WeltPixel_Selector_Model_Observer</class>
                        <method>generateDynamicCss</method>
                    </weltpixel_admin_system_config_changed_section_weltpixel_ajaxsearch>
                </observers>
            </admin_system_config_changed_section_weltpixel_ajaxsearch>
            <admin_system_config_changed_section_weltpixel_productswatch>
                <observers>
                    <weltpixel_admin_system_config_changed_section_weltpixel_productswatch>
                        <type>singleton</type>
                        <class>WeltPixel_Selector_Model_Observer</class>
                        <method>generateDynamicCss</method>
                    </weltpixel_admin_system_config_changed_section_weltpixel_productswatch>
                </observers>
            </admin_system_config_changed_section_weltpixel_productswatch>
            <admin_system_config_changed_section_weltpixel_layerednavigation>
                <observers>
                    <weltpixel_admin_system_config_changed_section_weltpixel_layerednavigation>
                        <type>singleton</type>
                        <class>WeltPixel_Selector_Model_Observer</class>
                        <method>generateDynamicCss</method>
                    </weltpixel_admin_system_config_changed_section_weltpixel_layerednavigation>
                </observers>
            </admin_system_config_changed_section_weltpixel_layerednavigation>
            <store_save_commit_after>
                <observers>
                    <weltpixel_store_save_commit_after>
                        <type>singleton</type>
                        <class>WeltPixel_Selector_Model_Observer</class>
                        <method>storeEdited</method>
                    </weltpixel_store_save_commit_after>
                </observers>
            </store_save_commit_after>
        </events>

    </adminhtml>

    <default>
        <weltpixel_selector>
            <headeroptions>
                <header_style>header-v1.0.phtml</header_style>
                <sticky_header>1</sticky_header>
                <sticky_header_mobile>0</sticky_header_mobile>
                <search_design>form.mini-v2.phtml</search_design>
                <disable_compare>0</disable_compare>
            </headeroptions>
            <sidebaroptions>
                <recentcompare>1</recentcompare>
                <poolenable>1</poolenable>
                <compareenable>1</compareenable>
                <newslettersignup>1</newslettersignup>
                <tagsenable>1</tagsenable>
                <recentview>1</recentview>
            </sidebaroptions>
            <categoryoptions>
                <quickview_design>version1</quickview_design>
                <showprice>yes</showprice>
                <showratings>yes</showratings>
                <newsaletag>yes</newsaletag>
                <showname>yes</showname>
                <addtocart>yes</addtocart>
                <addtowishlist>yes</addtowishlist>
                <addtocompare>yes</addtocompare>
                <enablequickview>yes</enablequickview>
                <addtocartbutton>lightbox</addtocartbutton>
                <onelinetitle>yes</onelinetitle>
                <equal_grid_images>1</equal_grid_images>
                <grid_image_size>500</grid_image_size>
                <hide_title>0</hide_title>
                <default_page_layout>three_columns</default_page_layout>
                <disable_back_image>0</disable_back_image>
            </categoryoptions>
            <productpageoptions>
                <imagewidth>520</imagewidth>
                <secondary_column_location>right</secondary_column_location>
                <secondary_column_options>replace</secondary_column_options>
                <image_column_width>4</image_column_width>
                <product_info_width>5</product_info_width>
                <secondary_column_width>3</secondary_column_width>
                <upsaleproductsnumber>10</upsaleproductsnumber>
                <relatedproductsnumber>10</relatedproductsnumber>
                <zoomwidth>900</zoomwidth>
                <enable_cloud_zoom>1</enable_cloud_zoom>
                <ajax_add_to_cart>1</ajax_add_to_cart>
                <ajax_add_to_cart_confirmation_hide>5</ajax_add_to_cart_confirmation_hide>
                <ajax_add_to_compare>0</ajax_add_to_compare>
                <product_image>single</product_image>
                <gallery_location>bottom</gallery_location>
                <product_info_format>tabs</product_info_format>
                <product_info_layout>onecolumn</product_info_layout>
                <smart_box>gender</smart_box>
                <display_sku>1</display_sku>
                <display_availability>1</display_availability>
                <disable_compare>0</disable_compare>
                <display_additionalinfo>1</display_additionalinfo>
                <display_reviews>1</display_reviews>
                <default_page_layout>one_column</default_page_layout>
                <preselect_configurable_options>1</preselect_configurable_options>
            </productpageoptions>
            <customization_settings>
                <website_width>1280px</website_width>
                <display_mode>0</display_mode>
                <ionicons>0</ionicons>
                <customcss>1</customcss>
                <retina>0</retina>
                <freeshipping>1</freeshipping>
                <freeshipping_calculator>0</freeshipping_calculator>
                <remove_shipping_estimator>0</remove_shipping_estimator>
                <login_backgroundimage></login_backgroundimage> <!-- UPLOADED IN THE BACKEND-->
                <login_page_layout>one_column</login_page_layout>
                <google_api_key></google_api_key>
                <contact_form_longitude></contact_form_longitude>
                <contact_form_latitude></contact_form_latitude>
                <contact_form_version>contacts/form.phtml</contact_form_version>
            </customization_settings>
        </weltpixel_selector>
        <weltpixel_colorsettings>
            <general>
                <text_color></text_color>
                <link_color></link_color>
                <link_hover_color></link_hover_color>
                <h1_color></h1_color>
                <h2_color></h2_color>
                <h3_color></h3_color>
            </general>
            <buttons>
                <button_background_color></button_background_color>
                <button_text_color></button_text_color>
                <button_hover_background_color></button_hover_background_color>
                <button_hover_text_color></button_hover_text_color>
                <button_border_color></button_border_color>
                <button_border_hover_color></button_border_hover_color>
                <button_action_background_color></button_action_background_color>
                <button_action_text_color></button_action_text_color>
                <button_action_hover_background_color></button_action_hover_background_color>
                <button_action_hover_text_color></button_action_hover_text_color>
            </buttons>
            <new_and_sale_labels>
                <label_new_background_color></label_new_background_color>
                <label_new_text_color></label_new_text_color>
                <label_sale_background_color></label_sale_background_color>
                <label_sale_text_color></label_sale_text_color>
            </new_and_sale_labels>
            <misc_elements>
                <product_page_price_color></product_page_price_color>
                <category_page_price_color_grid_view></category_page_price_color_grid_view>
                <category_page_price_color_list_view></category_page_price_color_list_view>
                <page_background_color></page_background_color>
                <content_area_background></content_area_background>
            </misc_elements>
            <header_version_1>
                <header_background></header_background>
                <text_color></text_color>
                <link_color></link_color>
                <link_hover_color></link_hover_color>
                <icons_color></icons_color>
                <icons_hover_color></icons_hover_color>
            </header_version_1>
            <header_version_2>
                <header_background></header_background>
                <text_color></text_color>
                <link_color></link_color>
                <link_hover_color></link_hover_color>
                <icons_color></icons_color>
                <icons_hover_color></icons_hover_color>
            </header_version_2>
            <header_version_3>
                <header_background></header_background>
                <text_color></text_color>
                <link_color></link_color>
                <link_hover_color></link_hover_color>
                <icons_color></icons_color>
                <icons_hover_color></icons_hover_color>
            </header_version_3>
            <header_menu>
                <background_color></background_color>
                <text_color></text_color>
            </header_menu>
            <breadcrumb>
                <background_color></background_color>
                <text_color></text_color>
            </breadcrumb>
            <search_box>
                <background_color></background_color>
                <text_color></text_color>
                <border_color></border_color>
            </search_box>
            <dropdown_boxes_header>
                <background_color></background_color>
                <background_hover_color></background_hover_color>
                <text_color></text_color>
                <hover_color></hover_color>
            </dropdown_boxes_header>
            <footer>
                <background_color></background_color>
                <text_color></text_color>
                <link_color></link_color>
                <link_hover_color></link_hover_color>
                <heading_color></heading_color>
                <newsletter_button_color></newsletter_button_color>
                <newsletter_button_hover_color></newsletter_button_hover_color>
                <newsletter_button_text_color></newsletter_button_text_color>
                <newsletter_button_text_hover_color></newsletter_button_text_hover_color>
